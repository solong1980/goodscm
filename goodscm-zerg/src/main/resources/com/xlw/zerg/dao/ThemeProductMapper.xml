<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xlw.zerg.dao.ThemeProductMapper" >
  <resultMap id="BaseResultMap" type="com.xlw.zerg.model.ThemeProduct" >
    <id column="theme_id" property="themeId" jdbcType="INTEGER" />
    <id column="product_id" property="productId" jdbcType="INTEGER" />
    
    <association property="product" javaType="com.xlw.zerg.model.Product">
    	<id column="product_id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="price" property="price" jdbcType="DECIMAL" />
		<result column="stock" property="stock" jdbcType="INTEGER" />
		<result column="delete_time" property="deleteTime" jdbcType="INTEGER" />
		<result column="category_id" property="categoryId" jdbcType="INTEGER" />
		<result column="main_img_url" property="mainImgUrl" jdbcType="VARCHAR" />
		<result column="from" property="from" jdbcType="TINYINT" />
		<result column="create_time" property="createTime" jdbcType="INTEGER" />
		<result column="update_time" property="updateTime" jdbcType="INTEGER" />
		<result column="summary" property="summary" jdbcType="VARCHAR" />
		<result column="img_id" property="imgId" jdbcType="INTEGER" />
    </association>
    
  </resultMap>
  
   <resultMap id="ProductResultMap" type="com.xlw.zerg.model.Product" >
   		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="price" property="price" jdbcType="DECIMAL" />
		<result column="stock" property="stock" jdbcType="INTEGER" />
		<result column="delete_time" property="deleteTime" jdbcType="INTEGER" />
		<result column="category_id" property="categoryId" jdbcType="INTEGER" />
		<result column="main_img_url" property="mainImgUrl" jdbcType="VARCHAR" />
		<result column="from" property="from" jdbcType="TINYINT" />
		<result column="create_time" property="createTime" jdbcType="INTEGER" />
		<result column="update_time" property="updateTime" jdbcType="INTEGER" />
		<result column="summary" property="summary" jdbcType="VARCHAR" />
		<result column="img_id" property="imgId" jdbcType="INTEGER" />
  </resultMap>
  
  <select id="selectProductsByThemeId" resultMap="ProductResultMap" >
    select p.* from theme_product tp , product p where tp.product_id = p.id and tp.theme_id = #{id}
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="map" >
    delete from theme_product
    where theme_id = #{themeId,jdbcType=INTEGER}
      and product_id = #{productId,jdbcType=INTEGER}
  </delete>
  
  <insert id="insert" parameterType="com.xlw.zerg.model.ThemeProduct" >
    insert into theme_product (theme_id, product_id)
    values (#{themeId,jdbcType=INTEGER}, #{productId,jdbcType=INTEGER})
  </insert>
  
  <select id="selectAll" resultMap="BaseResultMap" >
    select theme_id, product_id
    from theme_product
  </select>
  
</mapper>